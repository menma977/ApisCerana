  <item android:left="40dp" android:right="40dp">
    <shape
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false">
      <solid android:color="@color/colorSecondary"/>
    </shape>
  </item>
  <item android:left="20dp" android:right="20dp">
    <shape
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false">
      <solid android:color="@color/colorSecondaryLight"/>
    </shape>
  </item>
  <item>
    <shape
        android:shape="ring"
        android:thickness="5dp"
        android:useLevel="false">
      <solid android:color="@color/colorSecondaryDark"/>
    </shape>
  </item>
