<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.HomeFragment">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/orange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UselessParent">

      <TextView
          android:textSize="18sp"
          android:textStyle="bold"
          android:textColor="@color/textSecondary"
          android:textAlignment="center"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:id="@+id/usernameTextView"
          android:layout_weight="1"/>

      <LinearLayout
          android:layout_margin="5dp"
          android:background="@drawable/card_primary"
          android:orientation="vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textSecondary"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/balanceTextView"/>

      </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:elevation="5dp"
        app:columnCount="3"
        app:rowCount="2">

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="0"
          app:layout_row="0">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_center_focus_weak"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitCenter"
            android:elevation="5dp"
            android:id="@+id/qrButton"/>

        <TextView
            android:text="@string/qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="1"
          app:layout_row="0">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_account_balance"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitCenter"
            android:elevation="5dp"
            android:id="@+id/withdrawButton"/>

        <TextView
            android:text="@string/withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="2"
          app:layout_row="0">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_archive"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitCenter"
            android:elevation="5dp"
            android:id="@+id/reqeustStupButton"/>

        <TextView
            android:text="@string/request_stup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="0"
          app:layout_row="1">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_group_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitXY"
            android:elevation="5dp"
            android:id="@+id/addUserButton"/>

        <TextView
            android:text="@string/add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="1"
          app:layout_row="1">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_person"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitXY"
            android:elevation="5dp"
            android:id="@+id/editProfileButton"/>

        <TextView
            android:text="@string/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:orientation="vertical"
          android:layout_margin="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_columnWeight="1"
          app:layout_rowWeight="1"
          app:layout_column="2"
          app:layout_row="1">

        <ImageButton
            android:padding="15dp"
            android:src="@drawable/ic_recent_actors"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/button_default"
            android:contentDescription="@string/icon"
            android:tint="@color/textSecondary"
            android:scaleType="fitXY"
            android:elevation="5dp"
            android:id="@+id/uploadKTPButton"/>

        <TextView
            android:text="@string/upload_ktp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textSecondary"
            android:textStyle="bold"
            android:gravity="center"/>

      </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

  </LinearLayout>

</ScrollView>